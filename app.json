{
  "expo": {
    "name": "LEORA",
    "slug": "leora",
    "version": "1.1.0",
    "runtimeVersion": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "leora",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/iphone-splash-preview-dark.png",
      "resizeMode": "cover",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sarvar.leora",
      "appleTeamId": "APPLE_TEAM_ID",
      "icon": "./assets/images/logoIos.png",
      "buildNumber": "1.2.0",
      "entitlements": {
        "com.apple.security.application-groups": ["group.com.sarvaryarbekov.leora"]
      },
      "infoPlist": {
        "UIViewControllerBasedStatusBarAppearance": false,
        "NSCameraUsageDescription": "LEORA needs access to your camera to capture receipts and documents.",
        "NSMicrophoneUsageDescription": "LEORA needs access to your microphone for voice commands.",
        "NSFaceIDUsageDescription": "LEORA uses Face ID to securely access your data.",
        "NSPhotoLibraryUsageDescription": "LEORA needs access to your photo library.",
        "NSPhotoLibraryAddUsageDescription": "LEORA needs permission to save images.",
        "UIBackgroundModes": [
          "audio"
        ],
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/playstore-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.sarvar.leora",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-router",
      "@bacons/apple-targets",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/adaptive-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow LEORA to use Face ID for secure access."
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow LEORA to access your microphone.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "5fa3a555-1519-4da3-9e1a-0879915b84d9"
      }
    },
    "owner": "sarvar"
  }
}
